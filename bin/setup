#!/usr/bin/env sh

echo "ğŸ§¹ Removing previous build artifacts"
rm -rf deps _build

echo "ğŸ Installing dependencies and compiling"
mix local.hex --force
mix deps.get
mix deps.compile
mix compile

# Set up database
echo "ğŸ’¾ Setting up the database"
mix ecto.create
mix ecto.migrate

# Grab JS dependencies from NPM
echo "ğŸ•¸ï¸ Installing js dependencies"
pushd assets
yarn install
popd
